        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpVote)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DownVote)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DownVote)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<ul>
    <p> Comments</p>
@foreach(var comment in Model.Comments)
{
    <li>@comment.ContentOfComment</li>
    <li>@comment.UserId</li>
}
</ul>
<a asp-controller="Comments" asp-action="Create" asp-route-questionId=@Model.Id>
    add question comment
</a>


<div>
    <h4>Answers</h4>
    <ul>
    @foreach(var Answer in Model.Answers)
    {
        <li>@Answer.AnswerContent</li>
        <li>Answer.Id</li>
        <a asp-controller="Comments" asp-action="Create" asp-route-questionId=@Model.Id asp-route-answerid=@Answer.Id>
    add answer comment
</a>
    }
    </ul>
</div>


<form asp-action="CreateAnswer" method="post" asp-route-questionId=@Model.Id>

    <textarea cols="100" rows="9" name="AnswerContent"></textarea>
    <button type="submit">Confirm</button>
</form>


