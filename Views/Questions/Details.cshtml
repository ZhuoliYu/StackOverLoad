        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfCreate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfCreate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfClose)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfClose)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpVote)
